# rules
RULES=()

# summary variables
OK=0
FAILED=0
SKIPPED=0
CHANGED=0
IGNORED=0

# colors
GREEN="\033[0;32m"
RED="\033[0;31m"
YELLOW="\033[1;33m"
PURPLE="\033[0;35m"
NOCOLOR="\033[0m"
GRAY="\033[0;37m"

# system info
KERNEL=$(getconf LONG_BIT)
if [ -z "$KERNEL" ]; then
  ARCH=$(uname -m)
  [[ "$ARCH" = "x86_64" ]] && KERNEL="64" || KERNEL="32"
fi
